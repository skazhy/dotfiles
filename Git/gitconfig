    email = skazhy@gmail.com

[core]
    editor = vim
    excludesfile = ~/.gitignore.global
    pager = "cat"

[color]
    ui = true

[alias]
    co = checkout
    cp = checkout -p
    ci = commit
    ca = commit --amend
    wtf = reset --hard HEAD
    loc = log --pretty=format:'%Cblue%h%Creset %ar by %Cgreen%an%Creset - %s %Cred%d%Creset' --graph
    au = add -u
    ap = add -p
    st = status --ignore-submodules=dirty
    d = diff
    ds = diff --staged
    dss = diff --staged --stat
    gr = grep -n
    sub = submodule

[sendemail]
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = skazhy@gmail.com
    smtpserverport = 587

[push]
    default = current
