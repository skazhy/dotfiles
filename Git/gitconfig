[user]
    name = Karlis Lauva
    email = skazhy@gmail.com

[core]
    editor = vim
    excludesfile = ~/.gitignore.global

[alias]
    co = checkout
    ci = commit
    wtf = reset --hard HEAD
    loc = log --pretty=format:'%Cblue%h%Creset %ar by %Cgreen%an%Creset - %s %Cred%d%Creset' --graph
    rc = rm --cached
    au = add -u
    ap = add -p
    st = status
    ddr = !sh -c 'git diff --no-prefix > ~/Dropbox/patches/$(basename $(git rev-parse --show-toplevel)).patch'

[sendemail]
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = skazhy@gmail.com
    smtpserverport = 587
