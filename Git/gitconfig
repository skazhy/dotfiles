[alias]
    co = checkout
    cop = checkout -p
    ci = commit
    wtf = reset --hard HEAD
    loc = log --pretty=format:'%Cblue%h%Creset %ar by %Cgreen%an%Creset - %s %Cred%d%Creset' --graph
    rc = rm --cached
    au = add -u
    ap = add -p
    st = status
    rf = reflog -n 20
    ds = diff --staged

