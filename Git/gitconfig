[user]
    name = Karlis Lauva
    email = skazhy@gmail.com

[core]
    editor = vim
    excludesfile = ~/.gitignore.global
    pager = "less -x5,9"

[color]
    ui = true

[alias]
    co = checkout
    ci = commit
    wtf = reset --hard HEAD
    loc = log --pretty=format:'%Cblue%h%Creset %ar by %Cgreen%an%Creset - %s %Cred%d%Creset' --graph
    rc = rm --cached
    au = add -u
    ap = add -p
    st = status
    ddr = !sh -c 'git diff --no-prefix > ~/Dropbox/patches/$(basename $(git rev-parse --show-toplevel)).patch'
    cos = !sh -c 'git stash > /dev/null $1 && git checkout $1 && git stash apply > /dev/null'

[sendemail]
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = skazhy@gmail.com
    smtpserverport = 587
