[user]
    name = Karlis Lauva
    email = k@karlis.me

[core]
    editor = vim
    excludesfile = ~/.gitignore.global
    pager = "less -r"

[color]
    ui = true

[alias]
    co = checkout
    cp = checkout -p
    ci = commit
    ca = commit --amend
    cas = commit --amend --no-edit
    cif = commit --fixup
    wtf = reset --hard
    loc = log --pretty=format:'%Cblue%h%Creset %ar by %Cgreen%an%Creset - %s %Cred%d%Creset' --graph
    au = add -u
    ap = add -p
    st = status --ignore-submodules=dirty
    d = diff
    ds = diff --staged
    dss = diff --staged --stat
    gr = grep -n
    gri = grep -n -i
    sub = submodule
    sh = show
    shs = show head --stat
    rb = rebase
    rbc = rebase --continue
    rba = rebase --abort

[rebase]
    autosquash = true

[push]
    default = current

[grep]
    linenumber = true

[web]
    browser = open
